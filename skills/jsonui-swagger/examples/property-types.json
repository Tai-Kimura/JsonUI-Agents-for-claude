{
  "_comment": "Common property type definitions for OpenAPI schema",

  "basic_string": {
    "field_name": {
      "type": "string",
      "description": "Field description"
    }
  },

  "with_format": {
    "uuid": {
      "type": "string",
      "format": "uuid",
      "description": "UUID"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Email address"
    },
    "date_time": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp"
    }
  },

  "with_constraints": {
    "name": {
      "type": "string",
      "description": "Name",
      "maxLength": 20,
      "minLength": 1
    },
    "age": {
      "type": "integer",
      "description": "Age",
      "minimum": 0,
      "maximum": 150
    },
    "mobile": {
      "type": "string",
      "description": "Mobile phone number",
      "maxLength": 11,
      "pattern": "^[0-9]{10,11}$"
    }
  },

  "nullable": {
    "optional_field": {
      "type": "string",
      "description": "Optional field",
      "nullable": true
    }
  },

  "enum": {
    "status": {
      "type": "string",
      "enum": ["active", "inactive", "pending"],
      "description": "Status"
    }
  },

  "boolean_flag": {
    "is_active": {
      "type": "boolean",
      "description": "Active flag",
      "default": false
    }
  }
}
